<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<log4net>
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="app.log" />
			<appendToFile value="true" />
			<rollingStyle value="Date" />
			<datePattern value="'.'yyyy-MM-dd'.log'" />
			<maxSizeRollBackups value="7" />
			<staticLogFileName value="true" />
			<filter type="log4net.Filter.LevelRangeFilter">
				<param name="LevelMin" value="WARN"/>
			</filter>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level - %message%newline" />
			</layout>
		</appender>
		<appender name="RollingFileAppenderDebug" type="log4net.Appender.RollingFileAppender">
			<file value="app-debug.log" />
			<appendToFile value="true" />
			<rollingStyle value="Date" />
			<datePattern value="'.'yyyy-MM-dd'.log'" />
			<maxSizeRollBackups value="7" />
			<staticLogFileName value="true" />
			<filter type="log4net.Filter.LevelRangeFilter">
				<param name="LevelMin" value="ALL"/>
			</filter>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level - %message%newline" />
			</layout>
		</appender>
		<appender name="DeboggerConsole" type="log4net.Appender.DebugAppender">
			<filter type="log4net.Filter.LevelRangeFilter">
				<param name="LevelMin" value="INFO"/>
			</filter>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level - %message%newline" />
			</layout>
		</appender>
		<root>
			<level value="ALL" />
			<appender-ref ref="RollingFileAppender" />
			<appender-ref ref="RollingFileAppenderDebug" />
			<appender-ref ref="DeboggerConsole" />
		</root>
	</log4net>
</configuration>