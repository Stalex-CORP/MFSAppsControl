<ui:FluentWindow
    x:Class="MFSAppsControl.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFSAppsControl.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
    d:Title="MFS Apps Control"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=True}"
    d:DesignWidth="800"
    d:DesignHeight="450"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    StateChanged="OnWindowStateChanged"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{Binding ViewModel.ApplicationTitle}"
            d:Title="MFS Apps Control"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True"
            ShowMaximize="False"
            CanMaximize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/mfsappscontrol.ico" />
            </ui:TitleBar.Icon>
            <ui:TitleBar.TrailingContent>
                <ui:DropDownButton Appearance="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <ui:DropDownButton.Icon>
                        <ui:ImageIcon Width="24" Height="24" Source="{Binding ViewModel.CurrentIconLanguage}" d:Source="pack://application:,,,/MFSAppsControl;component/Resources/Flags/en.png" />
                    </ui:DropDownButton.Icon>
                    <ui:DropDownButton.Flyout>
                        <ContextMenu>
                            <MenuItem Command="{Binding ViewModel.ChangeLanguageCommand}" CommandParameter="EN">
                                <MenuItem.Icon>
                                    <Image Width="24" Height="24" Source="pack://application:,,,/MFSAppsControl;component/Resources/Flags/en.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Command="{Binding ViewModel.ChangeLanguageCommand}" CommandParameter="FR">
                                <MenuItem.Icon>
                                    <ui:Image Width="24" Height="24" Source="pack://application:,,,/MFSAppsControl;component/Resources/Flags/fr.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Command="{Binding ViewModel.ChangeLanguageCommand}" CommandParameter="ES">
                                <MenuItem.Icon>
                                    <ui:Image Width="24" Height="24" Source="pack://application:,,,/MFSAppsControl;component/Resources/Flags/es.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Command="{Binding ViewModel.ChangeLanguageCommand}" CommandParameter="DE">
                                <MenuItem.Icon>
                                    <ui:Image Width="24" Height="24" Source="pack://application:,,,/MFSAppsControl;component/Resources/Flags/de.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </ui:DropDownButton.Flyout>
                </ui:DropDownButton>
            </ui:TitleBar.TrailingContent>
        </ui:TitleBar>
        <ui:NavigationView
            x:Name="RootNavigation"
            Grid.Row="1"
            Padding="50,0"
            FrameMargin="0"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleVisible="False"
            OpenPaneLength="0"
            PaneDisplayMode="Top"
            TitleBar="{Binding ElementName=TitleBar, Mode=OneWay}">
            <ui:NavigationView.ContentOverlay>
                <Grid>
                    <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
                </Grid>
            </ui:NavigationView.ContentOverlay>
        </ui:NavigationView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,16,0">
            <ui:TextBlock Text="{Binding ViewModel.UpdateMessage}" d:Text="New update: v0.0" Visibility="{Binding ViewModel.UpdateMessageVisibility}" d:Visibility="Visible" Foreground="Red" TextDecorations="Underline" FontWeight="Light" FontStyle="Italic" Margin="0,0,12,0" Cursor="Hand" MouseLeftButtonUp="TextBlock_OpenLastRelease" FontSize="12"/>
            <ui:TextBlock Text="{Binding ViewModel.ApplicationVersionCopyright}" d:Text="v0.0 By Stalex" Foreground="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" FontSize="12"/>
        </StackPanel>
        
        <tray:NotifyIcon
            Grid.Row="0"
            FocusOnLeftClick="True"
            Icon="pack://application:,,,/mfsappscontrol.ico"
            MenuOnRightClick="True"
            TooltipText="{Binding ViewModel.ApplicationTitle}"
            LeftClick="OpenFromTray">
            <tray:NotifyIcon.Menu>
                <ContextMenu>
                    <MenuItem Header="MFS Apps Control" Icon="{ui:SymbolIcon ArrowMaximize20}" Click="OpenFromTray" />
                    <Separator/>
                    <MenuItem Header="Help" Icon="{ui:SymbolIcon ChatHelp20}" Click="OnTrayMenuHelpClick" />
                    <MenuItem Header="Log" Icon="{ui:SymbolIcon ReadingModeMobile20}" Click="OnTrayMenuLogClick" />
                    <MenuItem Header="Quit" Icon="{ui:SymbolIcon Dismiss20}" Click="OnTrayMenuQuitClick" />
                </ContextMenu>
            </tray:NotifyIcon.Menu>
        </tray:NotifyIcon>
    </Grid>
</ui:FluentWindow>
